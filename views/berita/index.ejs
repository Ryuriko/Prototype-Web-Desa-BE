<div class="row m-0 justify-content-center mb-4 mt-4 mt-md-0">
    <div class="col text-center"> 
        <h1 class="text-capitalize">Halaman <%= page %></h1>
    </div>
</div>
<% datas.forEach(data => { %> 
<div class="row m-0 mb-3 px-4 px-md-0">
    <div class="col-md-auto text-center">
        <img class="img-thumbnail text-center" src="<%= data.picture %>">
    </div>
    <div class="col">
        <h3 class="mt-3 mt-md-0"><%= data.title %></h3>
        <p>
            <%= data.body %>
        </p>
        <a class="btn btn-primary mb-4 mb-md-0" href="/berita/<%= data.title %>">Selengkapnya</a>
    </div>
</div>
<% }) %>
